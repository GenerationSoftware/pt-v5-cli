{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ]
}